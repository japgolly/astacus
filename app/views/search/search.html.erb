<% if @albums.nil? %>
  <table id="sq_errors" class="search_error"><tr><td>
    Your search query has the following errors:
    <ul>
      <% @sq.errors.to_a.each do |m| -%><li><%= m -%></li><% end -%>
    </ul>
  </td></tr></table>

<% elsif @albums.total_entries == 0 %>
  <div id="no_results" class="search_error">
    No results found.
  </div>

<% else %>
  <%= render :partial => 'pagination', :locals => {:result_row => :above} %>
  <%= render :partial => 'album', :collection => @albums %>
  <%= render :partial => 'pagination', :locals => {:result_row => :below} %>
<% end %>
